{
  "id": null,
  "uid": "token-usage",
  "title": "AI Cost Observer \u2014 Token Usage",
  "description": "Real token consumption tracking across AI tools \u2014 input/output tokens, model breakdown, cost per tool, and prompt activity.",
  "tags": [
    "ai-cost-observer",
    "tokens"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "weekStart": "",
  "editable": true,
  "graphTooltip": 1,
  "templating": {
    "list": [
      {
        "name": "host",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-vps"
        },
        "query": "label_values(ai_tokens_input_total, host_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "sort": 1,
        "label": "Host"
      },
      {
        "name": "tool",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus-vps"
        },
        "query": "label_values(ai_tokens_input_total, tool_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        },
        "sort": 1,
        "label": "Tool"
      },
      {
        "name": "interval",
        "type": "custom",
        "query": "1h,6h,12h,1d,7d,30d",
        "current": {
          "selected": true,
          "text": "1d",
          "value": "1d"
        },
        "includeAll": false,
        "multi": false,
        "label": "Interval"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Token Cost (Real)",
      "description": "Real cost from token usage, calculated from actual input/output token counts and model pricing.",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(ai_tokens_cost_usd_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) or vector(0)",
          "legendFormat": "Token Cost",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 4,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          },
          "noValue": "$0.00"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "auto",
        "orientation": "auto",
        "text": { "titleSize": 14, "valueSize": 32 }
      }
    },
    {
      "id": 2,
      "title": "Total Input Tokens",
      "description": "Total input tokens consumed across all AI tools.",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(ai_tokens_input_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) or vector(0)",
          "legendFormat": "Input Tokens",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "fixed", "fixedColor": "#3274D9" },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "id": 3,
      "title": "Total Output Tokens",
      "description": "Total output tokens generated by all AI tools.",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(ai_tokens_output_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) or vector(0)",
          "legendFormat": "Output Tokens",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "fixed", "fixedColor": "#A352CC" },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "id": 4,
      "title": "Total Prompts",
      "description": "Total number of prompts sent to AI tools.",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(ai_prompt_count_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) or vector(0)",
          "legendFormat": "Prompts",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "fixed", "fixedColor": "#FF9830" },
          "noValue": "0"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "id": 5,
      "title": "Token Usage Over Time",
      "description": "Input and output token consumption over time, stacked by tool.",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 5 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (tool_name) (increase(ai_tokens_input_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$__rate_interval]))",
          "legendFormat": "{{tool_name}} (input)",
          "range": true,
          "instant": false
        },
        {
          "refId": "B",
          "expr": "sum by (tool_name) (increase(ai_tokens_output_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$__rate_interval]))",
          "legendFormat": "{{tool_name}} (output)",
          "range": true,
          "instant": false
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "gradientMode": "scheme",
            "lineWidth": 0,
            "stacking": { "group": "A", "mode": "normal" },
            "axisBorderShow": false,
            "axisLabel": "Tokens",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "pointSize": 5,
            "scaleDistribution": { "type": "linear" },
            "showPoints": "never",
            "spanNulls": false,
            "thresholdsStyle": { "mode": "off" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["sum"]
        }
      }
    },
    {
      "id": 6,
      "title": "Token Cost by Tool",
      "description": "Cost distribution across tools using a treemap visualization. Larger rectangles = higher cost.",
      "type": "marcusolsson-treemap-panel",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 5 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (tool_name) (increase(ai_tokens_cost_usd_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "{{tool_name}}",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "host_name": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "tool_name": "Tool",
              "Value": "Cost (USD)"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 4,
          "color": { "mode": "continuous-GrYlRd" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tiling": "treemapSquarify",
        "showHeaders": true,
        "colorByField": "Value",
        "enableTextWrap": true
      }
    },
    {
      "id": 7,
      "title": "Token Cost Accumulation",
      "description": "Cumulative token cost over time, showing total and per-tool breakdown.",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 15 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(ai_tokens_cost_usd_total{host_name=~\"$host\", tool_name=~\"$tool\"})",
          "legendFormat": "Total Token Cost",
          "range": true,
          "instant": false
        },
        {
          "refId": "B",
          "expr": "sum by (tool_name) (ai_tokens_cost_usd_total{host_name=~\"$host\", tool_name=~\"$tool\"})",
          "legendFormat": "{{tool_name}}",
          "range": true,
          "instant": false
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 4,
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "axisBorderShow": false,
            "axisLabel": "Cost (USD)",
            "axisPlacement": "auto",
            "hideFrom": { "legend": false, "tooltip": false, "viz": false },
            "scaleDistribution": { "type": "linear" },
            "thresholdsStyle": { "mode": "off" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Total Token Cost" },
            "properties": [
              { "id": "custom.lineWidth", "value": 3 },
              { "id": "custom.fillOpacity", "value": 0 },
              { "id": "color", "value": { "fixedColor": "#E02F44", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": ["sum", "lastNotNull"]
        }
      }
    },
    {
      "id": 8,
      "title": "Tokens by Model",
      "description": "Token consumption breakdown by AI model name.",
      "type": "piechart",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 15 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (model_name) (increase(ai_tokens_input_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "{{model_name}} (input)",
          "instant": true
        },
        {
          "refId": "B",
          "expr": "sum by (model_name) (increase(ai_tokens_output_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "{{model_name}} (output)",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "custom": {
            "hideFrom": { "legend": false, "tooltip": false, "viz": false }
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "pieType": "donut",
        "tooltip": { "mode": "single", "sort": "none" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true,
          "values": ["value", "percent"],
          "calcs": ["lastNotNull"]
        },
        "displayLabels": ["name", "percent"]
      }
    },
    {
      "id": 9,
      "title": "Tool Status",
      "description": "Live status of all AI tools \u2014 hexagons show running state with color thresholds.",
      "type": "grafana-polystat-panel",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 },
      "targets": [
        {
          "refId": "A",
          "expr": "ai_app_running{host_name=~\"$host\"}",
          "legendFormat": "{{app_name}}",
          "instant": true
        },
        {
          "refId": "B",
          "expr": "ai_cli_running{host_name=~\"$host\"}",
          "legendFormat": "{{cli_name}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#808080", "value": null },
              { "color": "red", "value": -1 },
              { "color": "#808080", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "autoSizeColumns": true,
        "autoSizeRows": true,
        "autoSizePolygons": true,
        "ellipseCharacters": 18,
        "globalAutoScaleFonts": true,
        "globalTextFontAutoColor": "white",
        "hexagonSortByDirection": "asc",
        "hexagonSortByField": "name",
        "layoutDisplayLimit": 100,
        "layoutNumColumns": 6,
        "layoutNumRows": 5,
        "polygonBorderColor": "black",
        "polygonBorderSize": 2,
        "polygonGlobalFillColor": "#808080",
        "shape": "hexagon_pointed_top",
        "tooltipDisplayMode": "all",
        "tooltipDisplayTextTriggeredEmpty": "OK",
        "tooltipPrimarySortDirection": "desc",
        "tooltipPrimarySortField": "thresholdLevel",
        "tooltipSecondarySortDirection": "desc",
        "tooltipSecondarySortField": "value"
      }
    },
    {
      "id": 10,
      "title": "Token Details Table",
      "description": "Detailed breakdown of token usage per tool and model with cost calculations.",
      "type": "table",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-vps"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (tool_name, model_name) (increase(ai_tokens_input_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "B",
          "expr": "sum by (tool_name, model_name) (increase(ai_tokens_output_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "C",
          "expr": "sum by (tool_name, model_name) (increase(ai_tokens_cost_usd_total{host_name=~\"$host\", tool_name=~\"$tool\"}[$interval])) > 0",
          "legendFormat": "",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "host_name": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "tool_name": "Tool",
              "model_name": "Model",
              "Value #A": "Input Tokens",
              "Value #B": "Output Tokens",
              "Value #C": "Cost (USD)"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": true,
            "inspect": false
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Tool" },
            "properties": [
              { "id": "custom.width", "value": 160 },
              { "id": "unit", "value": "string" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Model" },
            "properties": [
              { "id": "custom.width", "value": 200 },
              { "id": "unit", "value": "string" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Input Tokens" },
            "properties": [
              { "id": "unit", "value": "short" },
              { "id": "decimals", "value": 0 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Output Tokens" },
            "properties": [
              { "id": "unit", "value": "short" },
              { "id": "decimals", "value": 0 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Cost (USD)" },
            "properties": [
              { "id": "unit", "value": "currencyUSD" },
              { "id": "decimals", "value": 4 },
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-background", "mode": "gradient" }
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": {
          "show": true,
          "reducer": ["sum"],
          "countRows": false,
          "fields": "",
          "enablePagination": false
        },
        "sortBy": [
          { "displayName": "Cost (USD)", "desc": true }
        ]
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "links": [
    {
      "title": "Overview",
      "type": "link",
      "url": "/d/ai-cost-overview",
      "icon": "dashboard",
      "tooltip": "AI Cost Observer Overview"
    },
    {
      "title": "Unified Cost",
      "type": "link",
      "url": "/d/unified-cost",
      "icon": "dashboard",
      "tooltip": "Unified Cost Dashboard"
    },
    {
      "title": "Browser Usage",
      "type": "link",
      "url": "/d/browser-ai-usage",
      "icon": "dashboard",
      "tooltip": "Browser AI Usage"
    }
  ],
  "style": "dark"
}
