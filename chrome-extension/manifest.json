{
  "manifest_version": 3,
  "name": "AI Cost Observer",
  "version": "1.2.0",
  "description": "Track time spent on AI websites, intercept API token usage, and report to AI Cost Observer agent.",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "http://127.0.0.1:8080/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.deepseek.com/*",
    "https://api.groq.com/*",
    "https://api.cohere.ai/*",
    "https://api.together.xyz/*",
    "https://api-inference.huggingface.co/*",
    "https://api.mistral.ai/*",
    "https://api.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
