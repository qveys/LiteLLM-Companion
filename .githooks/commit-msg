#!/usr/bin/env bash
# Validate commit messages: <emoji> <conventional commit>
#
# Examples:
#   ğŸ› fix(telemetry): remove unit from gauges
#   âœ¨ feat: add LiteLLM integration
#   ğŸ”§ chore(ci): update workflow
#   ğŸ’¥ feat!: breaking change
set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && cd ../.github/scripts && pwd)"
MSG=$(sed -n '1p' "$1")

exec "$SCRIPT_DIR/lint-message.sh" "$MSG"
